<AppBar@BoxLayout>:
	padding:'6dp'
	canvas:
                        Color:
                                rgba:0,1,0,1
                        Rectangle:
                                size: self.size
                                pos: self.pos
                size_hint_y: None
                height: '50dp'
                Label:
                        text: 'HashWHats'
                        bold:True
                        font_size: '22dp'
                        haling:'left'
                        text_size:self.size
                        valing: 'center'
                        padding_x: '10dp'
